# Яндекс.Музыка
# Токен не обязателен - можно добавить через веб-интерфейс после запуска
# YANDEX_TOKEN=your_yandex_music_token_here

# Настройки приложения
DOWNLOAD_PATH=/path/to/music/folder
DEFAULT_QUALITY=lossless  # lossless, hq, nq

# База данных (используется встроенный SQLite)
# DATABASE_URL больше не используется

# API настройки (для локальной разработки)
API_HOST=0.0.0.0
API_PORT=3333
FRONTEND_URL=http://localhost:7777
CORS_ORIGINS=
DEBUG=True

# Docker настройки (для развертывания в Docker/Synology)
# HOST_PORT - внешний порт для доступа к приложению (маппинг на внутренний порт 8000)
# HOST_PORT=7777
# FRONTEND_URL=http://192.168.1.80:7777  # Для Synology укажите IP вашего NAS

